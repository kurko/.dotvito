  #export GIT_ORIGIN_DIFF="\[$NO_COLOR\] \[$YELLOW\](*) \[$NO_COLOR\]"
#fi

export PS1="\n\[$YELLOW\](\$(__ruby_version)) \[$NO_COLOR\]\w \[$GREEN\]($GIT_BRANCH)${GIT_ORIGIN_DIFF}\[$NO_COLOR\] \n\[$NO_COLOR\]â†’\[$NO_COLOR\] "

